{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "allowJs": true,
      "baseUrl": ".",
      "watch": true,
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "lib": [
        "es2015"
      ]
    },
    "exclude": ["files"],
    "include": [
      "src"
    ]
  }